{
  "version": "1.1.0",
  "description": "Garanti BBVA Finansal Pusula - FINAL API",
  "request_format": {
    "endpoint": "POST /analyze",
    "payload": {
      "user_metadata": {
        "current_balance": "float (Kullanıcının hesaptaki toplam parası)",
        
        "credit_card_debt": "float (Toplam Kredi Kartı Borcu)",
        "salary": "float (Maaş Tutarı)",
        "salary_day": "int (Ayın kaçında maaş yatıyor? Örn: 1 veya 15)"
      },
      "transactions": [
        {
          "id": "string",
          "date": "YYYY-MM-DD",
          "amount": "float",
          "description": "string",
          "mcc_code": "string",
          "category": "Enum [FIXED, SUBSCRIPTION, UTILITY, LIFESTYLE, OTHER]"
        }
      ]
    }
  },
  "response_format": {
    "safe_to_spend": {
      "amount": "float",
      "explanation": "string (Örn: '20.000 TL bakiyen var ama 5.000 TL borç düşünce kalan: 15.000')"
    },
    "alerts": [
      {
        "type": "Enum [SUBSCRIPTION_DUPLICATE, PRICE_HIKE, BUDGET_WARNING]",
        "severity": "Enum [LOW, MEDIUM, HIGH]",
        "message": "string",
        "potential_savings": "float"
      }
    ],
    "upcoming_obligations": [
      {
        "name": "string",
        "estimated_date": "YYYY-MM-DD",
        "estimated_amount": "float"
      }
    ]
  }
}
